<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@android:color/black"
    >


    <TextView
        android:id="@+id/movesense_name"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/movesense_address"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        tools:text="Movesense"/>

    <TextView
        android:id="@+id/movesense_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movesense_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/background_light"
        tools:text="21:21:34:21"/>

    <TextView
        android:id="@+id/movesense_rsid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movesense_address"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/background_light"
        tools:text="40"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"/>

</RelativeLayout>
